<MyLayout>:
    # sets the orientation and widgets vertically
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        canvas.before:
            Color:
                rgba: 0.08, 0.08, 0.08, 1  # Dark background color
            Rectangle:
                size: self.size
                pos: self.pos

        # TextInput for displaying and inputting calculator values
        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, .15)
            background_color: 0, 0, 0, 0  # Transparent background

        # For arranging buttons in a grid with 4 columns and 6 rows
        GridLayout:
            cols: 4
            rows: 6

            # Square root button
            Button:
                size_hint: (.2, .16)  # Adjusted size_hint
                font_size: 32
                text: u"\u221A"  # Unicode for square root symbol
                background_color: 0.2, 0.2, 0.2, 1  # Button background color
                on_press: root.square_root()

            # Sine button
            Button:
                size_hint: (.2, .16)  # Adjusted size_hint
                font_size: 32
                text: "sin"
                background_color: 0.2, 0.2, 0.2, 1  # Button background color
                on_press: root.sine()

            # Cosine button
            Button:
                size_hint: (.2, .16)  # Adjusted size_hint
                font_size: 32
                text: "cos"
                background_color: 0.2, 0.2, 0.2, 1  # Button background color
                on_press: root.cosine()

            # Tangent button
            Button:
                size_hint: (.2, .16)  # Adjusted size_hint
                font_size: 32
                text: "tan"
                background_color: 0.2, 0.2, 0.2, 1  # Button background color
                on_press: root.tangent()

            # Percentage Button
            Button:
                size_hint: (.2, .16)  # Adjusted size_hint
                font_size: 32
                text: "%"
                background_color: 0.2, 0.2, 0.2, 1  # Button background color
                on_press: root.percent()

            # Clear button    
            Button:
                size_hint: (.2, .16)  # Adjusted size_hint
                font_size: 32
                text: "C"
                background_color: 0.2, 0.2, 0.2, 1  # Button background color
                on_press: root.clear()

            # remove Button
            Button:
                id: clear
                size_hint: (.2, .16)  # Adjusted size_hint
                font_size: 32
                text: u"\u00AB"  # Unicode for backspace symbol
                background_color: 0.2, 0.2, 0.2, 1  # Button background color
                on_press: root.remove()

            # Division button
            Button:
                size_hint: (.2, .16)  # Adjusted size_hint
                font_size: 32
                text: "/"
                background_color: 0.2, 0.2, 0.2, 1  # Button background color
                on_press: root.math_sign("/")

            # Number 7 button
            Button:
                size_hint: (.2, .16)  # Adjusted size_hint
                font_size: 32
                text: "7"
                background_color: 0.1, 0.1, 0.1, 1  # Darker button background color
                on_press: root.button_press(7)

            # Number 8 button
            Button:
                size_hint: (.2, .16)  # Adjusted size_hint
                font_size: 32
                text: "8"
                background_color: 0.1, 0.1, 0.1, 1  # Darker button background color
